{
  "compilerOptions": {
    "esModuleInterop": true,
    "target": "ESNext",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./build",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "allowJs": true,
    "baseUrl": "src",
    "paths": {
      "@/*": ["./*"],
      "@api/*": ["./api/*"],
      "@entity/*": ["./entity/*"]
    }
  },
  "include": [
    "src/**/*",
    "temp/**/*",
    "ormconfig.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
